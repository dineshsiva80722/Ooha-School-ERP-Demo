# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/school_erp_system

# For MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/school_erp_system?retryWrites=true&w=majority

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Next.js Environment
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,jpg,jpeg,png,mp4,mp3

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=school-erp-files

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME=School ERP System
APP_VERSION=1.0.0
ENVIRONMENT=development
